@model VeryTimekeeper.Models.Task
<h3>Update your post</h3>
@using (Html.BeginForm("Update", "Tasks"))
{
    @Html.HiddenFor(model => model.TaskId)
    @Html.HiddenFor(model => model.Content)
    @Html.HiddenFor(model => model.timeToFinish)
    <div class="form-group">
        @Html.LabelFor(model => model.Content)
        @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.timeRemaining)
        @Html.TextBoxFor(x => x.timeRemaining, new { @class = "form-control" })
    </div>


    <input type="submit" value="Update" class="btn btn-default" />

}